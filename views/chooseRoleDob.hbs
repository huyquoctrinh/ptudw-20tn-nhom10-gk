<main>
  <div class="container mb-5 mt-5">

    <form action="/users/myprofile">
      <h2 class="px-3 py-3">Vui lòng cung cấp thông tin: </h2>
      <div class="col">
        <div class="forms-inputs mb-4">
          <span>Bạn là:</span>
          <select id="dropdown" class="form-control" name="role">
            <option value="reader">Độc giả</option>
            <option value="reporter">Phóng viên</option>
            <option value="editor">Biên tập viên</option>
          </select>
        </div>
      </div>
      <div class="col">
        <div class="forms-inputs mb-4">
          <span>Ngày sinh</span>
          <input
            type="date"
            class="form-control"
            id="dob"
            name="dob"
            required
          />
        </div>
      </div>
      <div class="mb-3">
        <input type="submit" class="btn btn-dark w-100 mb-" value="Hoàn tất" />
      </div>
    </form>
  </div>
</main>