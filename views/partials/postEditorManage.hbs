<li class="list-groupitem">
    <div class="row align-items-center g-2 category-item">
        <div class="col-3">
            <img style="width: 100%; height: 100%;" src="{{Article.image_thumbnail}}"/>
        </div>
        <div class="col-9">
            <a href="/users/EditorViewPostDetail?articleId={{article_id}}&id={{id}}">
                <h5>{{Article.title}}</h5>
                <p class="mt-0 mb-0">{{created_at}}</p>
                <p class="mt-0 mb-0">{{briefDescription}}</p>
            </a>
        </div>
    </div>
</li>       