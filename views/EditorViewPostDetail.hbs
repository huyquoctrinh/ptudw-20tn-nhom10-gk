<main>
  <div class="container">
    <div class="row">
      <div class="col-3">
        <h2>Biên tập viên</h2>
        <a href="/editor/EditorProcessed"><p>Đã xử lý</p></a>
        <a href="/editor/checkStatus"><p class="active">Chờ Duyệt</p></a>
     </div>
      <div class="col-9 left-col">
        <div class="row">
          <div class="col-1">
            <div class="vl"></div>
          </div>
          {{#with post}}
          <div class="col-11">
            <div class="row">
                <div class="col-7">
                    <h3 class="text-black"> <a href="/editor/checkStatus">Các bài viết chờ duyệt</a></h3>
                </div>
                <div class="col-5 button-div">
                    <button class="btn btn-danger text-light mb-1 mr-1" id="rejectBtn{{articleStatusId}}" onclick="openReject({{articleStatusId}})">Từ chối <i class="bi bi-x-circle text-white"></i></button>
                    <div class="form-popup" id="rejectform{{articleStatusId}}" >
                        <form action="/editor/reject" method="post"onsubmit="updateRejectReason(event, {{articleStatusId}})" class="form-container">
                            <button type="button" onclick="closeReject({{articleStatusId}})">x</button>
                            <h3 class="text-center">Lí do từ chối</h3>
                            <!-- <p class="text-center">Thời sự</p> -->
                            <label for="reason{{articleStatusId}}"><b>Nhập lí do ở đây</b></label>
                            <input type="text" placeholder="" name="reason{{articleStatusId}}" id="reason{{articleStatusId}}"required/>
                            <button type="submit" class="btn btn-primary" onclick="closeReject({{articleStatusId}})">Update</button>
                        </form>
                    </div>
                    <button class="btn btn-success text-light" id="approveBtn{{articleStatusId}}" onclick="openApprove({{articleStatusId}})">Duyệt <i class="bi bi-check-circle text-white"></i></button>
                    <!-- The form -->
                    <div class="form-popup" id="approveForm{{articleStatusId}}">
                        <form action="/editor/approve" method="post" class="form-container" onsubmit="approve(event, {{articleStatusId}}, {{id}})">
                            <button type="button" onclick="closeApprove({{articleStatusId}})">x</button>
                            <h3 class="text-center">Cập nhật thông tin</h3>
                            <!-- <p class="text-center">Thời sự</p> -->
                            <label for="category{{articleStatusId}}"><b>Chuyên mục</b></label>
                            <input list="Category" placeholder="" name="category{{articleStatusId}}" id="category{{articleStatusId}}"required/>
                            <datalist id="Category">
                                {{#each categories}}
                                    <option value="{{category_name}}">
                                {{/each}}
                            </datalist>
                            <br/>
                            <label for="tag{{articleStatusId}}"><b>Tag</b></label>
                            <input list="Tag" placeholder="" name="tag{{articleStatusId}}" id="tag{{articleStatusId}}" required/>
                            <datalist id="Tag">
                                {{#each tags}}
                                    <option value="{{tag_name}}">
                                {{/each}}
                            </datalist>
                            <br/>
                            <label for="pubDay{{articleStatusId}}"><b>Ngày xuất bản</b></label>
                            <input type="text" placeholder="" name="pubDay{{articleStatusId}}" id="pubDay{{articleStatusId}}" required />
                            <button type="submit" class="btn btn-primary" onclick="closeApprove({{articleStatusId}})">Update</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="container my-3 py-2" style="background-color: #F8F8F8;">
               <h3>{{title}}</h3>
               <p><span class="font-weight-bold">{{Category.category_name}}</span>    
               <span class="font-italic">{{createDay}}</span></p>
               <div class="row">
                  <div class="col-4">
                    <img src="{{image_thumbnail}}" alt="..." class="container">
                  </div>
                  <div class="col-8"><p>{{briefDescription}}</p></div>
               </div>

              {{#each Images}}
                <p> {{description}} </p>
                <img src="{{imagePath}}" alt="" class="d-block mx-auto"/>
              {{/each}}
              <p> {{description}} </p>
              <p class="font-weight-bold">{{Writer.User.name}}</p>
            </div>
          </div>
          {{/with}}
        </div>
      </div>
    </div>
  </div>
</main>

 <script src="../javascript/EditorPost.js"></script>
