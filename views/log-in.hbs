<main>
  <div class="container-fluid mt-5">
    <div class="row d-flex justify-content-center">
      <div class="col-md-6">
        <div class="card px-3 py-3" id="form2">
          <h3>Đăng nhập</h3>
          <div class="form-data text-dark mt-3" v-if="!submitted">
            <div class="forms-inputs mb-4">
              <span>Email</span>
              <input
                class="w-100"
                autocomplete="off"
                type="text"
                v-model="email"
                v-bind:class="{'form-control':true, 'is-invalid' : !validEmail(email) && emailBlured}"
                v-on:blur="emailBlured = true"
              />
              <div class="invalid-feedback">Email hợp lệ là bắt buộc!</div>
            </div>
            <div class="forms-inputs mb-5">
              <span>Bạn là:</span>
              <select id="dropdown" class="mt-3 ms-3">
                <option value="0">Độc giả</option>
                <option value="1">Phóng viên</option>
                <option value="2">Biên tập viên</option>
                <option value="3">Quản trị viên</option>
              </select>
            </div>
            <div class="forms-inputs mb-4">
              <span>Mật khẩu</span>
              <input
                class="w-100"
                autocomplete="off"
                type="password"
                v-model="password"
                v-bind:class="{'form-control':true, 'is-invalid' : !validPassword(password) && passwordBlured}"
                v-on:blur="passwordBlured = true"
              />
              <div class="invalid-feedback">
                Mật khẩu phải ít nhất 8 ký tự.
              </div>
            </div>
            <div class="row mb-2 ms-2 text-end text-dark">
 <a href="/forgotpass">Quên mật khẩu?</a>
            </div>
            <div class="mb-3">
              <button
                v-on:click.stop.prevent="submit"
                class="btn btn-dark w-100"
                id="submit-btn"
              >
                Đăng nhập
              </button>
            </div>
          </div>
          <div class="success-data" v-else>
            <div class="text-center d-flex flex-column">
              <i class="bx bxs-badge-check"></i>
              <span class="text-center fs-1">Bạn đã đăng nhập
                <br />
                thành công</span>
            </div>
          </div>
          <!-- class="row text-center" -->
          <div class="text-center">
            <span>Bạn chưa có tài khoản?</span>
            </div>
        </div>
      </div>
      <div class="col-md-6">
        <img
          class="img-thumbnail"
          src="https://i1-vnexpress.vnecdn.net/2019/12/11/doc-bao-3915-1576032105.jpg?w=1020&h=0&q=100&dpr=1&fit=crop&s=JHB82b3_YgoYmPUPhx_gFg"
          alt=""
        />
      </div>
    </div>
  </div>

  </main>

<script src="https://cdn.jsdelivr.net/npm/vue@2.6.12/dist/vue.js"></script>
