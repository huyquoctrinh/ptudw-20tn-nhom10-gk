  const dropdown = document.getElementById("dropdown"); const submitBtn =
  document.getElementById("submit-btn"); dropdown.addEventListener("change",
  function () { const selectedOption =
  dropdown.options[dropdown.selectedIndex].value; console.log(selectedOption);
  }); const pages = { 0: "/", 1: "/mylist", 2: "/checkStatus", 3:
