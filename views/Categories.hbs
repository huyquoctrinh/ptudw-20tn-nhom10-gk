
<main>
  <section class="section">
    <div class="container">
      <div class="title">
        {{#with categoryInfo}}
        {{!-- <a href="#"><span>{{category_name}}</span></a> --}}
        <h2 class="headingh2FeatureNews">{{category_name}}</h2>
        {{/with}}
      </div>
      <!-- row 1 -->

      <div class="row justify-content-between">
        <!-- biggest left news -->
        <div class="col-lg-8 col-sm-12 col-md-12">
          {{#each firstNews}}
          {{> firstFeaturedArticle}}
          {{/each}}
        </div>
        <!-- news 2 -->
        <div class="col-lg-4 rounded-4 col-sm-12 col-md-12 ">
          {{#each secondNews}}
          {{> secondFeaturedArticle}}
          {{/each}}

        </div>
        <!--  end news 2 -->
      </div>
      <!-- carousel news -->
      <div class="row align-items-center product-slider product-slider-4">
          {{#each featuredProducts}}
          <div class="col">
              {{> carousel-article2}}
          </div>
          {{/each}}
      </div>
      <!-- carousel end -->
    </div>
  </section>
  <hr />
  <!-- tin moi nhat -->
  <section class="section">
    <h2>Tin mới nhất</h2>
    <div class="row align-items-center product-slider product-slider-4">
          {{#each featuredProducts}}
          <div class="col">
              {{> carousel-article2}}
          </div>
          {{/each}}
      </div>
  </section>
  <!-- end tin moi nhat -->
  <hr />
  <!-- xem nhieu nhat -->
  <section>
    <h2>Xem nhiều nhất</h2>
    <div class="row">
      <!-- tin -->
      <div class="col-8">
        {{#each featuredProducts}}
          {{> mostViewArticle}}
        {{/each}}
      </div>
      <!-- quang cao -->
      <div class="col-4">
        <img src="../images/qc_1.png" alt="" />
        <img src="../images/qc_2.png" alt="" />
        <img src="../images/qc_3.png" alt="" />
      </div>
    </div>
  </section>
  
</main>
