<main>
  <div class="container mt-4">
    <div class="row">
      <div class="col-3">
        <div class="d-flex align-items-center justify-content-center">
          <img
            src="{{user.avatar}}"
            alt="avt"
            id="avatar"
            onclick="document.getElementById('avatar-input').click();"
          /></div>

        <form
          action="/users/update-profile"
          method="POST"
          enctype="multipart/form-data"
        >
          <input
            type="file"
            name="avatar"
            id="avatar-input"
            accept="image/*"
            style="display: none;"
          />
          <button
            type="button"
            id="upload-btn"
            onclick="document.getElementById('avatar-input').click();"
            style="display: none;"
          ></button>
          <span id="file-name"></span>
          <i class="bi bi-save text-secondary" type="submit"></i>
        </form>

        <h2 class="username mt-2">{{user.name}}</h2>
        <div class="list-group-flush mt-4">
          <a class="list-group-item" href="/users/myprofile">Hồ sơ của tôi</a>
          <a class="list-group-item active" href="#">Cập nhật hồ sơ</a>
          <a class="list-group-item" href="/users/change-pass">Thay đổi mật khẩu</a>
          <a class="list-group-item" href="/users/premium">
            <i class="bi bi-bookmark-star-fill text-warning"></i>
            Premium
          </a>
        </div>
      </div>
      <div class="col-9">
        <div class="row">
          <h4>Cập nhật hồ sơ</h4>
        </div>
        <ul class="list-group" id="myList">
          <div class="fulname mt-3 list-group-item">
            <span>Tên</span>
            <a class="col" href="#" onclick="enableEdit()"><i
                class="bi bi-pencil-square float-end fs-4"
              ></i></a>
            <div
              class="btn-outline-dark btn w-100 text-start none-hover text-secondary"
            >{{user.name}}</div>
          </div>
          <div class="pseudonym mt-3 list-group-item">
            <span>Bút danh</span>
            {{#if (eq isUser 3)}}
              <a class="col" href="#" onclick="enableEdit()"><i
                  class="bi bi-pencil-square float-end fs-4"
                ></i></a>
              <div
                class="btn-outline-dark btn w-100 text-start none-hover text-secondary"
                style="min-height:40px;"
              >{{user.username}}</div>
            {{/if}}

          </div>
          <div class="mt-3 email-user list-group-item">
            <span>Email</span>
            <div
              class="btn-outline-dark btn w-100 text-start none-hover text-dark opacity-50 bg-secondary"
            >{{user.email}}</div>
          </div>
          <div class="mt-3 birthday list-group-item">
            <span>Ngày sinh</span>
            <a class="col" href="#" onclick="enableEdit()"><i
                class="bi bi-pencil-square float-end fs-4"
              ></i></a>
            <div
              class="btn-outline-dark btn w-100 text-start none-hover text-secondary"
            >{{formatDate user.dob}}</div>
          </div>
        </ul>
      </div>
    </div>
  </div>
</main>