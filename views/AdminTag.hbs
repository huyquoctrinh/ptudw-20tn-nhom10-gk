<main>
  <div class="container">
    <div class="row">
      <div class="col-3">
        <h1>Quản lý</h1>
        <a href="/users/AdminViewAllPost"><p>Xem danh sách bài viết</p></a>
        <a href="/users/AdminManageCategories"><p>Quản lý chuyên mục</p></a>
        <a href="/users/AdminTag"><p class="active bg-dark">Quản lý nhãn tag</p></a>
        <a href="/users/AdmineditorDetail"><p>Quản lý biên tập viên</p></a>
        <a href="/users/AdminUserManagement"><p>Quản lý người dùng</p></a>
        <a href="/users/admin-addpremium"><p>Gia hạn tài khoản cho độc giả</p></a>
      </div>
      <div class="col-9 left-col">
        <div class="row">
          <div class="col-1">
            <div class="vl"></div>
          </div>
          <div class="col-11">
            <h3>Quản lý nhãn tag</h3>
            <div class="container">
              <div class="row justify-content-center g-2">
                <div class="col-9 h-100">
                  <div class="mb-3 icon-input">
                    <i class="bi bi-search icon"></i>
                    <input type="text" class="form-control" name="keyword" id="keyword" aria-describedby="helpId" placeholder="" required onkeyup="filterTag(this.value)" />
                  </div>
                </div>
                <div class="col-3 h-100">
                  <button class="btn btn-primary h-100" onclick="openAddTag()">+ Thêm tag</button>
                  <div class="form-popup" id="addFormTag">
                    <form action="/users/tag/add" method="post" class="form-container" onsubmit="addItemTag(event)">
                      <div class="mb-3">
                        <button type="button" onclick="closeAddTag()">x</button>
                        <h3 class="text-center">Thêm Tag</h3>
                        <label for="itemAdd">Nhập tên Tag</label>
                        <input type="text" name="itemAdd" id="itemAdd" aria-describedby="helpId" placeholder="" required />
                        <button type="submit" onclick="addItemTag(event)" class="btn btn-primary">Thêm</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
              <ul class="list-group" id="myTags">
                {{#each tags}}
                  {{> tagAdminManage}}
                {{/each}}
              </ul>
            </div>
            <div class="col-lg-12">
              <nav aria-label="Page navigation example" id="pagination">
                  {{{ createPagination pagination paginationClass="pagination justify-content-center" leftText="Previous" rightText="Next"}}}
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
 <script>
    document.querySelectorAll('#pagination li').forEach(li => {
        li.classList.add('page-item');
    });
    document.querySelectorAll('#pagination a').forEach(a => {
        a.classList.add('page-link');
    })
 </script>
 <script src="../javascript/AdminTag.js"></script>
