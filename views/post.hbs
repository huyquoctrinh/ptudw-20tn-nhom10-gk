<head>
  <meta charset="UTF-8" />
  <title>Summernote with Bootstrap 4</title>
  <script
    src="https://code.jquery.com/jquery-3.5.1.min.js"
    crossorigin="anonymous"
  ></script>
  <script
    src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"
  ></script>

  <link
    rel="stylesheet"
    href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
    crossorigin="anonymous"
  />
  <script
    src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
    integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
    crossorigin="anonymous"
  ></script>

  <link
    href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css"
    rel="stylesheet"
  />
  <script
    src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"
  ></script>
</head>
<main>
  <div class="container py-5">
    <h1>Đăng bài</h1>
    <form action="/writer/post" method="post" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label">Tiêu đề</label>
        <div class="input-group">
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            required
          />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label">Tóm tắt</label>
        <div class="input-group">
          <input
            type="text"
            class="form-control"
            id="summary"
            name="summary"
            required
          />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label">Chuyên mục</label>
        <div class="dropdown">
          <button
            class="btn btn-light dropdown-toggle border-dark"
            type="button"
            id="triggerId"
            data-bs-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="false"
          >
            <span id="selectedCategoryText">Chọn chuyên mục cho bài viết</span>
          </button>
          <div
            class="dropdown-menu"
            aria-labelledby="triggerId"
            style="background-color: white;"
          >
            <a
              class="dropdown-item"
              href="#"
              onclick="selectCategory(event, 'Kinh doanh')"
            >Kinh doanh</a>
            <a
              class="dropdown-item"
              href="#"
              onclick="selectCategory(event, 'Thời sự')"
            >Thời sự</a>
            <a
              class="dropdown-item"
              href="#"
              onclick="selectCategory(event, 'Chính trị')"
            >Chính trị</a>
            <a
              class="dropdown-item"
              href="#"
              onclick="selectCategory(event, 'Sức khỏe')"
            >Sức khỏe</a>
            <a
              class="dropdown-item"
              href="#"
              onclick="selectCategory(event, 'Giải trí')"
            >Giải trí</a>
            <a
              class="dropdown-item"
              href="#"
              onclick="selectCategory(event, 'Thế giới')"
            >Thế giới</a>
            <a
              class="dropdown-item"
              href="#"
              onclick="selectCategory(event, 'Giao thông')"
            >Giao thông</a>
            <a
              class="dropdown-item"
              href="#"
              onclick="selectCategory(event, 'Giáo dục')"
            >Giáo dục</a>
            <a
              class="dropdown-item"
              href="#"
              onclick="selectCategory(event, 'Doanh nghiệp')"
            >Doanh nghiệp</a>
            <a
              class="dropdown-item"
              href="#"
              onclick="selectCategory(event, 'Chứng khoán')"
            >Chứng khoán</a>

          </div>
          <input type="hidden" id="selectedCategory" name="selectedCategory" />

        </div>

      </div>
      <div class="mb-3">
        <label class="form-label">Hình ảnh (Thumbnail)</label>
        <div class="input-group">
          <input
            type="file"
            class="form-control"
            id="image"
            name="image"
            accept="image/*"
            required
          />
        </div>
      </div>
      {{! <div class="mb-3">
        <label class="form-label">Nội dung</label>
        <div class="container-fluid">
          <textarea
            id="content"
            class="container-fluid"
            style="height: 500px;"
          ></textarea>
        </div>
      </div> }}
      <div class="mb-3 mt-3">
        <label class="form-label">Nội dung</label>
        <div class="container-fluid">
          <textarea
            name="summernote"
            placeholder="Nhập nội dung tại đây"
            id="summernote"
          ></textarea>
          <script>
            $('#summernote').summernote({ placeholder: 'Nhập nội dung tại đây',
            tabsize: 2, height: 500, toolbar: [ ['style', ['style']], ['font',
            ['bold', 'underline', 'clear']], ['color', ['color']], ['para',
            ['ul', 'ol', 'paragraph']], ['table', ['table']], ['insert',
            ['link', 'picture', 'video']], ['view', ['fullscreen', 'codeview',
            'help']] ] });
          </script>
        </div>
      </div>

      <div class="row d-flex justify-content-end">
        {{! <button
          class="btn btn-secondary col-1"
          type="submit"
          id="draft"
        >Draft</button> }}
        <button class="btn btn-dark col-2 ms-1" type="submit" id="post">Đăng bài</button>
        <input type="hidden" id="post" name="post" />

      </div>
    </form>
  </div>
</main>

<!-- Import thư viện Summernote -->
<link
  href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css"
  rel="stylesheet"
/>
<script src="https://cdn.jsdelivr.net/npm/jquery/dist/jquery.min.js"></script>
<script
  src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"
></script>
<script>
  function selectCategory(event, category) { event.preventDefault();
  document.getElementById('selectedCategory').value = category;
  document.getElementById('selectedCategoryText').textContent = category; }
</script>